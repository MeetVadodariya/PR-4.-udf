    <!-- 3. Write a JavaScript program to find which number is greater in 4 numbers using nested if else. (using simple function) -->

    <script>
        let a = prompt("Enter the first number: ");
        let b = prompt("Enter the second number: ");
        let c = prompt("Enter the third number: ");
        let d = prompt("Enter the fourth number: ");

        function number() {
            if (a > b) {
                if (a > c) {
                    if (a > d) {
                        return a;
                    } else {
                        return d;
                    }
                } else {
                    if (c > d) {
                        return c;
                    } else {
                        return d;
                    }
                }
            } else {
                if (b > c) {
                    if (b > d) {
                        return b;
                    } else {
                        return d;
                    }
                } else {
                    if (c > d) {
                        return c;
                    } else {
                        return d;
                    }
                }
            }
        }
        let greatest = number();
        document.write("The greatest number is: " + greatest);
    </script>
</body>
