    <!-- 7. Write a JavaScript program to find which number is greater in 3 numbers using nested if else. (using arrow function) -->

    <script>
        let a = prompt("Enter the first number: ");
        let b = prompt("Enter the second number: ");
        let c = prompt("Enter the third number: ");

        let Number = () => {
            if (a > b) {
                if (a > c) {
                    return a;
                } else {
                    return c;
                }
            } else {
                if (b > c) {
                    return b;
                } else {
                    return c;
                }
            }
        }

        let greatest = Number();
        document.write("The greatest number is: " + greatest);
    </script>
